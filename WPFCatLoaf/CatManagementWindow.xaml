<Window x:Class="WPFCatLoaf.CatManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFCatLoaf"
        mc:Ignorable="d"
        Title="Cat Management - Cat Loaf Cafe" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="OrangePrimary" Color="#FF6347"/>
        <SolidColorBrush x:Key="OrangeSecondary" Color="#FFB347"/>
        <Style x:Key="OrangeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource OrangePrimary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource OrangeButtonStyle}">
            <Setter Property="Background" Value="{StaticResource OrangeSecondary}"/>
        </Style>
        <Style x:Key="OrangeTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="OrangeComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="OrangeDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
        </Style>

    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource OrangePrimary}" CornerRadius="10" Padding="20,15" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Cat Management" FontSize="28" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="WelcomeTextBlock" Text="Manage your cafe's lovely cats" FontSize="14" Foreground="#FFE4B5"/>
                </StackPanel>
                <Button Grid.Column="1" x:Name="BackToMenuButton" Content="🏠 Main Menu" 
                        Style="{StaticResource SecondaryButtonStyle}" Click="BackToMenuButton_Click"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="20" Margin="0,0,15,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Cats List" FontSize="22" FontWeight="Bold" Margin="0,0,0,15"/>
                    <DataGrid x:Name="CatsDataGrid" Grid.Row="1" Style="{StaticResource OrangeDataGridStyle}"
                              AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                              SelectionMode="Single" SelectionChanged="CatsDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding CatId}" Width="50"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Breed" Binding="{Binding Breed}" Width="*"/>
                            <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="60"/>
                            <DataGridTextColumn Header="Gender" Binding="{Binding Gender.GenderName}" Width="80"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status.StatusName}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock x:Name="FormTitleTextBlock" Text="Add New Cat" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                        <TextBlock Text="Name*"/>
                        <TextBox x:Name="NameTextBox" Style="{StaticResource OrangeTextBoxStyle}" Margin="0,5,0,15"/>

                        <TextBlock Text="Age"/>
                        <TextBox x:Name="AgeTextBox" Style="{StaticResource OrangeTextBoxStyle}" Margin="0,5,0,15"/>

                        <TextBlock Text="Breed"/>
                        <TextBox x:Name="BreedTextBox" Style="{StaticResource OrangeTextBoxStyle}" Margin="0,5,0,15"/>

                        <TextBlock Text="Friendliness (1-5)"/>
                        <TextBox x:Name="FriendlinessRatingTextBox" Style="{StaticResource OrangeTextBoxStyle}" Margin="0,5,0,15"/>

                        <TextBlock Text="Description"/>
                        <TextBox x:Name="DescriptionTextBox" Style="{StaticResource OrangeTextBoxStyle}" TextWrapping="Wrap" AcceptsReturn="True" Height="80" Margin="0,5,0,15"/>

                        <TextBlock Text="Gender*"/>
                        <ComboBox x:Name="GenderComboBox" Style="{StaticResource OrangeComboBoxStyle}" DisplayMemberPath="GenderName" SelectedValuePath="GenderId" Margin="0,5,0,15"/>

                        <TextBlock Text="Status*"/>
                        <ComboBox x:Name="StatusComboBox" Style="{StaticResource OrangeComboBoxStyle}" DisplayMemberPath="StatusName" SelectedValuePath="StatusId" Margin="0,5,0,15"/>

                        <TextBlock Text="Picture URL"/>
                        <TextBox x:Name="PictureTextBox" Style="{StaticResource OrangeTextBoxStyle}" Margin="0,5,0,15"/>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Button x:Name="SaveButton" Content="Save" Style="{StaticResource OrangeButtonStyle}" Click="SaveButton_Click"/>
                            <Button x:Name="ClearButton" Content="Clear" Style="{StaticResource SecondaryButtonStyle}" Click="ClearButton_Click"/>
                        </StackPanel>
                        <TextBlock x:Name="ValidationMessageTextBlock" Foreground="Red" FontWeight="Bold" TextWrapping="Wrap" Margin="0,10,0,0" Visibility="Collapsed"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>