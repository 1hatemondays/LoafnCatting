<Window x:Class="WPFCatLoaf.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFCatLoaf"
        mc:Ignorable="d"
        Title="Order Window" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Available Products" FontSize="20" FontWeight="Bold" Margin="5"/>
            <DataGrid x:Name="ProductsDataGrid" Grid.Row="1" Margin="5" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat={}{0:C}}" Width="Auto"/>
                    <DataGridTextColumn Header="Stock" Binding="{Binding UnitInStock}" Width="Auto"/>
                    <DataGridTemplateColumn Header="Image" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Picture, Converter={StaticResource ImagePathConverter}}" 
                           Width="60" Height="60" Stretch="Uniform"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Add to Order" Click="AddToOrderButton_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Grid Grid.Column="1" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Current Order" FontSize="20" FontWeight="Bold" Margin="5"/>

            <DataGrid x:Name="OrderDetailsDataGrid" Grid.Row="1" Margin="5" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Product" Binding="{Binding Product.Name}" Width="*"/>
                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="Auto"/>
                    <DataGridTextColumn Header="Subtotal" Binding="{Binding SubTotal, StringFormat={}{0:C}}" Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="2" Margin="5">
                <TextBlock Text="Select Table:" Margin="0,10,0,5"/>
                <ComboBox x:Name="TableComboBox" DisplayMemberPath="TableName" SelectedValuePath="TableId"/>

                <TextBlock x:Name="TotalPriceTextBlock" Text="Total: $0.00" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>

                <Button x:Name="SubmitOrderButton" Content="Submit Order" Height="40" FontSize="16" Click="SubmitOrderButton_Click"/>
                <Button x:Name="ManageOrdersButton" Content="Manage All Orders" Height="40" FontSize="16" Margin="0,10,0,0" Click="ManageOrdersButton_Click"/>

            </StackPanel>
        </Grid>
    </Grid>
</Window>