<Window x:Class="WPFCatLoaf.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFCatLoaf"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="LoafnCatting - Cat Café Management" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        ResizeMode="NoResize"
        Background="{StaticResource CatCafeBackground}">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left side - Cat café image/branding -->
        <Border Grid.Column="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF8C5A" Offset="0"/>
                    <GradientStop Color="#D2691E" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Cat emoji as logo -->
                <Viewbox Grid.Row="1" Width="200" Height="200">
                    <TextBlock Text="🐱☕" FontSize="100" HorizontalAlignment="Center"/>
                </Viewbox>
                
                <!-- Welcome text -->
                <StackPanel Grid.Row="2" VerticalAlignment="Top" Margin="0,30,0,0">
                    <TextBlock Text="Loaf n' Catting" 
                              FontSize="36" 
                              FontWeight="Bold" 
                              Foreground="White" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>
                    <TextBlock Text="Cat Café Management System" 
                              FontSize="18" 
                              Foreground="White" 
                              HorizontalAlignment="Center"
                              Opacity="0.9"/>
                    <TextBlock Text="Where every cup tells a purr-fect story" 
                              FontSize="14" 
                              Foreground="White" 
                              HorizontalAlignment="Center"
                              FontStyle="Italic"
                              Opacity="0.8"
                              Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Right side - Login form -->
        <Border Grid.Column="1" Background="White" Padding="50">
            <StackPanel VerticalAlignment="Center" MaxWidth="300">
                
                <!-- Login header -->
                <TextBlock Text="Welcome Back!" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="{StaticResource CatCafePrimary}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10"/>
                
                <TextBlock Text="Sign in to your account" 
                          FontSize="14" 
                          Foreground="Gray"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20"/>
                
                <!-- Switch Toggle -->
                <Border Background="#F5F5F5" 
                       CornerRadius="25" 
                       Height="50" 
                       Margin="0,0,0,30">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Toggle Background -->
                        <Border x:Name="ToggleBackground" 
                               Grid.Column="0"
                               Background="{StaticResource CatCafePrimary}" 
                               CornerRadius="25" 
                               Margin="2">
                            <Border.RenderTransform>
                                <TranslateTransform x:Name="ToggleTransform"/>
                            </Border.RenderTransform>
                        </Border>
                        
                        <!-- Account Login Button -->
                        <Button x:Name="AccountToggleButton"
                               Grid.Column="0"
                               Content="👤 Account"
                               Background="Transparent"
                               BorderThickness="0"
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="12"
                               Click="AccountToggleButton_Click"
                               Cursor="Hand"/>
                        
                        <!-- Table ID Button -->
                        <Button x:Name="TableToggleButton"
                               Grid.Column="1"
                               Content="🍽️ Table ID"
                               Background="Transparent"
                               BorderThickness="0"
                               Foreground="Gray"
                               FontWeight="Bold"
                               FontSize="12"
                               Click="TableToggleButton_Click"
                               Cursor="Hand"/>
                    </Grid>
                </Border>
                
                <!-- Account Login Fields -->
                <StackPanel x:Name="AccountLoginPanel" Visibility="Visible">
                    <!-- Email field -->
                    <Border BorderBrush="{StaticResource CatCafePrimary}" 
                           BorderThickness="0,0,0,2" 
                           Margin="0,0,0,25">
                        <StackPanel>
                            <TextBlock Text="📧" 
                                      FontSize="16" 
                                      Foreground="{StaticResource CatCafePrimary}" 
                                      Margin="0,0,0,5"/>
                            <TextBox x:Name="EmailTextBox"
                                    FontSize="14"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    KeyDown="EmailTextBox_KeyDown">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="{TemplateBinding Background}"
                                                           BorderBrush="{TemplateBinding BorderBrush}"
                                                           BorderThickness="{TemplateBinding BorderThickness}">
                                                        <ScrollViewer x:Name="PART_ContentHost" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <TextBlock Text="Email Address" 
                                      FontSize="12" 
                                      Foreground="Gray" 
                                      Opacity="0.7"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Password field -->
                    <Border BorderBrush="{StaticResource CatCafePrimary}" 
                           BorderThickness="0,0,0,2" 
                           Margin="0,0,0,35">
                        <StackPanel>
                            <TextBlock Text="🔒" 
                                      FontSize="16" 
                                      Foreground="{StaticResource CatCafePrimary}" 
                                      Margin="0,0,0,5"/>
                            <PasswordBox x:Name="PasswordBox"
                                        FontSize="14"
                                        BorderThickness="0"
                                        Background="Transparent"
                                        KeyDown="PasswordBox_KeyDown">
                                <PasswordBox.Style>
                                    <Style TargetType="PasswordBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="PasswordBox">
                                                    <Border Background="{TemplateBinding Background}"
                                                           BorderBrush="{TemplateBinding BorderBrush}"
                                                           BorderThickness="{TemplateBinding BorderThickness}">
                                                        <ScrollViewer x:Name="PART_ContentHost" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </PasswordBox.Style>
                            </PasswordBox>
                            <TextBlock Text="Password" 
                                      FontSize="12" 
                                      Foreground="Gray" 
                                      Opacity="0.7"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                
                <!-- Table ID Input Field -->
                <StackPanel x:Name="TableIdPanel" Visibility="Collapsed">
                    <Border BorderBrush="{StaticResource CatCafePrimary}" 
                           BorderThickness="0,0,0,2" 
                           Margin="0,0,0,35">
                        <StackPanel>
                            <TextBlock Text="🍽️" 
                                      FontSize="16" 
                                      Foreground="{StaticResource CatCafePrimary}" 
                                      Margin="0,0,0,5"/>
                            <TextBox x:Name="TableIdTextBox"
                                    FontSize="14"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    KeyDown="TableIdTextBox_KeyDown">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="{TemplateBinding Background}"
                                                           BorderBrush="{TemplateBinding BorderBrush}"
                                                           BorderThickness="{TemplateBinding BorderThickness}">
                                                        <ScrollViewer x:Name="PART_ContentHost" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <TextBlock Text="Enter your table number" 
                                      FontSize="12" 
                                      Foreground="Gray" 
                                      Opacity="0.7"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Customer info text -->
                    <TextBlock Text="🐱 Welcome! Enter your table number to start ordering delicious food and drinks!" 
                              FontSize="12" 
                              Foreground="{StaticResource CatCafePrimary}"
                              TextWrapping="Wrap"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,35"/>
                </StackPanel>
                
                <!-- Login button -->
                <Button x:Name="LoginButton"
                       Content="SIGN IN"
                       Background="{StaticResource CatCafePrimary}"
                       BorderBrush="{StaticResource CatCafePrimary}"
                       Foreground="White"
                       Height="45"
                       FontWeight="Bold"
                       FontSize="14"
                       Margin="0,0,0,30"
                       Click="LoginButton_Click"
                       BorderThickness="0"
                       Cursor="Hand">
                </Button>
                
                <!-- Register button - Only visible in account mode -->
                <Button x:Name="RegisterButton"
                        Content="REGISTER"
                        Background="Transparent"
                        BorderBrush="{StaticResource CatCafePrimary}"
                        Foreground="{StaticResource CatCafePrimary}"
                        Height="45"
                        FontWeight="Bold"
                        FontSize="14"
                        Margin="0,0,0,30"
                        Click="RegisterButton_Click"
                        BorderThickness="2"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               BorderBrush="{TemplateBinding BorderBrush}"
                                               BorderThickness="{TemplateBinding BorderThickness}"
                                               CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource CatCafeSecondary}"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="{StaticResource CatCafeDarkBrown}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- Divider -->
                <Separator Margin="0,0,0,20" Background="LightGray"/>
                
                <!-- Additional info -->
                <!--TextBlock Text="Need help? Contact your administrator" 
                          FontSize="12" 
                          Foreground="Gray"
                          HorizontalAlignment="Center"/-->
                
            </StackPanel>
        </Border>
        
        <!-- Loading overlay (initially hidden) -->
        <Border x:Name="LoadingOverlay" 
                Grid.ColumnSpan="2" 
                Background="#80000000" 
                Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Cat Paw Animation -->
                <Grid Width="80" Height="80">
                    <!-- Main paw pad -->
                    <Ellipse Width="40" Height="50" 
                             Fill="{StaticResource CatCafePrimary}"
                             VerticalAlignment="Bottom"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,5">
                        <Ellipse.RenderTransform>
                            <RotateTransform x:Name="PawSpinTransform" CenterX="20" CenterY="25"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Style.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                               From="0" To="360" Duration="0:0:2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    
                    <!-- Toe pads -->
                    <Ellipse Width="12" Height="15" 
                             Fill="{StaticResource CatCafePrimary}"
                             HorizontalAlignment="Left" 
                             VerticalAlignment="Top"
                             Margin="15,5,0,0">
                        <Ellipse.RenderTransform>
                            <RotateTransform CenterX="6" CenterY="7.5"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Style.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                               From="0" To="360" Duration="0:0:2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    
                    <Ellipse Width="12" Height="15" 
                             Fill="{StaticResource CatCafePrimary}"
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Top"
                             Margin="0,0,0,0">
                        <Ellipse.RenderTransform>
                            <RotateTransform CenterX="6" CenterY="7.5"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Style.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                               From="0" To="360" Duration="0:0:2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    
                    <Ellipse Width="12" Height="15" 
                             Fill="{StaticResource CatCafePrimary}"
                             HorizontalAlignment="Right" 
                             VerticalAlignment="Top"
                             Margin="0,5,15,0">
                        <Ellipse.RenderTransform>
                            <RotateTransform CenterX="6" CenterY="7.5"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Style.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                               From="0" To="360" Duration="0:0:2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    
                    <Ellipse Width="10" Height="12" 
                             Fill="{StaticResource CatCafePrimary}"
                             HorizontalAlignment="Right" 
                             VerticalAlignment="Top"
                             Margin="0,20,5,0">
                        <Ellipse.RenderTransform>
                            <RotateTransform CenterX="5" CenterY="6"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Style.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                               From="0" To="360" Duration="0:0:2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                </Grid>
                
                <TextBlock Text="🐾 Signing in..." 
                          Foreground="White" 
                          FontSize="16" 
                          Margin="0,15,0,0"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
        
    </Grid>
</Window>
